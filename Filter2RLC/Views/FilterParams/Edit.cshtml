@model Filter2RLC.Models.FilterParams

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<hr id="line">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Edit Filter Parameters</h4>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="row">
        <div class="column">
            <table id="create">
                <caption>Values of the model of Filter</caption>
                <tr>
                    <th id="header"> Parameter</th>
                    <th>Value</th>
                </tr>
                <tr>
                    <td id="header"> Resistance 1 [Ohm]</td>
                    <td>
                        @Html.EditorFor(model => model.Resistance1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Resistance1, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td id="header"> Resistance 2 [Ohm]</td>
                    <td>
                        @Html.EditorFor(model => model.Resistance2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Resistance2, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td id="header"> Inductance L1 [H]</td>
                    <td>
                        @Html.EditorFor(model => model.Inductance, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Inductance, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td id="header"> Capacitance C1 [F]</td>
                    <td>
                        @Html.EditorFor(model => model.Capacitance, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Capacitance, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td id="header"> Amplitude of Input Voltage [V]</td>
                    <td>
                        @Html.EditorFor(model => model.U1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.U1, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td id="header"> Minimum Frequency [Hz]</td>
                    <td>
                        @Html.EditorFor(model => model.Fmin, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fmin, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td id="header"> Maximum Frequency [Hz]</td>
                    <td>
                        @Html.EditorFor(model => model.Fmax, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fmax, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td id="header"> Number Of Points [-]</td>
                    <td>
                        @Html.EditorFor(model => model.NumOfRows, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NumOfRows, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        </div>
        <div class="column">
            <img src="~/Image/SchematRLC.png" alt="Block diagram" style="display:block; width:600px; height:auto; margin-left:auto; margin-right:auto" />
        </div>
    </div>

    <p>
        <input type="submit" id="smallbtn" class="btn btn-default" value="Save" />
    </p>
}

<p>
    <input type="button" class="myButton" value="Get me back to list" onclick="window.location='@Url.Action("Index", "FilterParams")'" />
</p>

